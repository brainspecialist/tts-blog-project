<!DOCTYPE html>
<html>
  <head>
    <title>TechTalentBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	<nav class="navbar navbar-default">
	  <div class="container-fluid">

	  	<button type="button" class="btn btn-default navbar-btn"><a href="/">Home</a></button>

	      <!-- Login button/Sign out button -->
	      <div class="navbar-right">
		    <% if user_signed_in? %>
  			  <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-primary navbar-btn" %> 
  			  <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger navbar-btn" %>
  			<% end %>
		  </div>
	  </div><!-- /.container-fluid -->
	</nav>
	<div class='container'>
	  <%= yield %>
	</div>
  </body>
</html>
